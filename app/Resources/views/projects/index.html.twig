{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-xs-12">
                <div class="well">
                    <a href="{{ path('project_add') }}" class="btn btn-default">
                        + New project
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            {% if user.projects|length > 0 %}
                {% for project in user.projects %}
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="well">
                        <h2>{{ project.name }}</h2>
                        <p>
                            {{ project.description }}
                        </p>
                        <a class="btn btn-default" href="{{ path('project_index', {'id': project.id}) }}">Open project</a>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <div class="col-xs-12">
                    <div class="well">
                        You have currently no projects.
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
